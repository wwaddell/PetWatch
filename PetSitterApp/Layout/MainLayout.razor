@inherits LayoutComponentBase
@inject PetSitterApp.Services.SyncService SyncService
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime
@implements IDisposable

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Pet Sitter App</MudText>
        <MudSpacer />
        @if (SyncService.IsSyncing)
        {
            <MudProgressCircular Color="Color.Inherit" Indeterminate="true" Size="Size.Small" Class="mr-4"/>
        }
        else
        {
            <MudIconButton Icon="@Icons.Material.Filled.Sync" Color="Color.Inherit" Title="Sync" OnClick="@(() => SyncService.TryAutoSync())" />
        }
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Href="/settings" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudNavLink Href="/customers" Icon="@Icons.Material.Filled.People">Customers</MudNavLink>
            <MudNavLink Href="/pets" Icon="@Icons.Material.Filled.Pets" Class="ml-4">Pets</MudNavLink>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CalendarToday">Appointments</MudNavLink>
            <MudNavLink Href="/summary" Icon="@Icons.Material.Filled.BarChart">Summary</MudNavLink>
            <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings">Settings</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    protected override void OnInitialized()
    {
        SyncService.OnChange += StateHasChanged;
        AppInfo.OnUpdateAvailable += ShowUpdateToast;
    }

    public void Dispose()
    {
        SyncService.OnChange -= StateHasChanged;
        AppInfo.OnUpdateAvailable -= ShowUpdateToast;
    }

    private void ShowUpdateToast()
    {
        Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomCenter;
        Snackbar.Add("A new version is available.", Severity.Info, config =>
        {
            config.Action = "Update";
            config.ActionColor = Color.Warning;
            config.Onclick = async snackbar =>
            {
                await JSRuntime.InvokeVoidAsync("window.reloadApp");
            };
            config.RequireInteraction = true;
        });
        StateHasChanged();
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
