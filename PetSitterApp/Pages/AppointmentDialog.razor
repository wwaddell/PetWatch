@using PetSitterApp.Models
@inject LocalDbService LocalDb
@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudSelect T="Guid" Label="Customer" Value="Appointment.CustomerId" ValueChanged="OnCustomerChanged">
            @foreach (var customer in Customers)
            {
                <MudSelectItem Value="@customer.Id">@customer.FullName</MudSelectItem>
            }
        </MudSelect>

        <MudSelect T="string" Label="Pets" MultiSelection="true" @bind-SelectedValues="SelectedPets">
            @foreach (var pet in CustomerPets)
            {
                <MudSelectItem Value="@pet.Id.ToString()">@pet.Name (@pet.Species)</MudSelectItem>
            }
        </MudSelect>

        <MudSelect T="string" Label="Service Type" @bind-Value="Appointment.ServiceType">
            <MudSelectItem Value="@("Walk")">Walk</MudSelectItem>
            <MudSelectItem Value="@("House Sit")">House Sit</MudSelectItem>
            <MudSelectItem Value="@("Watch Pet")">Watch Pet</MudSelectItem>
            <MudSelectItem Value="@("Water Plant")">Water Plant</MudSelectItem>
            <MudSelectItem Value="@("Visit")">Visit</MudSelectItem>
        </MudSelect>

        <MudTextField @bind-Value="Appointment.Title" Label="Title" />
        <MudTextField @bind-Value="Appointment.Description" Label="Description" Lines="3" />

        <div class="d-flex gap-4">
             <MudDatePicker Label="Start Date" @bind-Date="Appointment.Start" />
             <MudDatePicker Label="End Date" @bind-Date="Appointment.End" />
        </div>

        <div class="d-flex gap-4 align-end">
            <MudNumericField @bind-Value="Appointment.Rate" Label="Rate" Format="N2" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.AttachMoney" />
            <MudNumericField @bind-Value="Appointment.ExpectedAmount" Label="Expected Amount" Format="N2" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.AttachMoney" />
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="CalculateAmount">Calculate</MudButton>
        </div>

        <MudText Typo="Typo.h6" Class="mt-4">Payments</MudText>
        <MudList T="string">
            @foreach (var payment in Payments)
            {
                <MudListItem T="string">
                    <div class="d-flex justify-space-between align-center">
                        <MudText>@payment.PaymentDate.ToShortDateString() - @payment.Amount.ToString("C") (@payment.Method)</MudText>
                        <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(() => DeletePayment(payment))" Size="Size.Small" />
                    </div>
                </MudListItem>
            }
        </MudList>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="AddPayment" Class="mt-2">Add Payment</MudButton>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Appointment Appointment { get; set; } = new();

    private List<Customer> Customers = new();
    private List<Pet> CustomerPets = new();
    private List<Payment> Payments = new();

    private IEnumerable<string> SelectedPets { get; set; } = new HashSet<string>();

    protected override async Task OnInitializedAsync()
    {
        Customers = await LocalDb.GetCustomers();

        if (Appointment.Id != Guid.Empty)
        {
            var allPayments = await LocalDb.GetPayments();
            Payments = allPayments.Where(p => p.AppointmentId == Appointment.Id).ToList();

            // Load pets for this customer
            if (Appointment.CustomerId != Guid.Empty)
            {
                await LoadCustomerPets(Appointment.CustomerId);
                SelectedPets = Appointment.PetIds.Select(id => id.ToString()).ToHashSet();
            }
        }
    }

    private async Task OnCustomerChanged(Guid customerId)
    {
        Appointment.CustomerId = customerId;
        await LoadCustomerPets(customerId);
        SelectedPets = new HashSet<string>();
        Appointment.PetIds.Clear();
    }

    private async Task LoadCustomerPets(Guid customerId)
    {
        var allPets = await LocalDb.GetPets();
        CustomerPets = allPets.Where(p => p.CustomerId == customerId).ToList();
    }

    private void CalculateAmount()
    {
        if (Appointment.Start.HasValue && Appointment.End.HasValue)
        {
            var days = (Appointment.End.Value - Appointment.Start.Value).Days;
            if (days == 0) days = 1; // Minimum 1 day charge if same day? Or user adjusts.
            Appointment.ExpectedAmount = days * Appointment.Rate;
        }
    }

    private async Task AddPayment()
    {
        var newPayment = new Payment { AppointmentId = Appointment.Id, Amount = 0 };
        var parameters = new DialogParameters { ["Payment"] = newPayment };
        var dialog = DialogService.Show<PaymentDialog>("Add Payment", parameters);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is Payment payment)
        {
            Payments.Add(payment);
        }
    }

    private async Task DeletePayment(Payment payment)
    {
        await LocalDb.DeletePayment(payment.Id);
        Payments.Remove(payment);
    }

    private async Task Submit()
    {
        Appointment.SyncState = SyncState.PendingUpdate;

        // Update PetIds from Selection
        Appointment.PetIds = SelectedPets.Select(Guid.Parse).ToList();

        await LocalDb.SaveAppointment(Appointment);

        foreach (var payment in Payments)
        {
            payment.AppointmentId = Appointment.Id;
            await LocalDb.SavePayment(payment);
        }

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}
