@using PetSitterApp.Models
@inject LocalDbService LocalDb
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject SyncService SyncService

<MudDialog>
    <DialogContent>
        <MudAutocomplete T="Customer" Label="Customer" Value="_selectedCustomer" ValueChanged="OnCustomerSelected" SearchFunc="SearchCustomers" ToStringFunc="@(c => c?.FullName)" />

        <MudSelect T="string" Label="Pets" MultiSelection="true" @bind-SelectedValues="SelectedPets" MultiSelectionTextFunc="@(new Func<List<string>, string>(GetMultiSelectionText))">
            @foreach (var pet in CustomerPets)
            {
                <MudSelectItem Value="@pet.Id.ToString()">@pet.Name (@pet.Species)</MudSelectItem>
            }
        </MudSelect>

        <MudSelect T="string" Label="Service" Value="Appointment.ServiceType" ValueChanged="OnServiceChanged">
             @foreach(var s in Services)
             {
                 <MudSelectItem Value="@s.Name">@s.Name</MudSelectItem>
             }
        </MudSelect>

        <MudTextField @bind-Value="Appointment.Description" Label="Description" Lines="3" />

        <div class="d-flex gap-4">
             <MudDatePicker Label="Start Date" @bind-Date="Appointment.Start" Editable="true" />
             <MudDatePicker Label="End Date" @bind-Date="Appointment.End" Editable="true" />
        </div>

        <div class="d-flex gap-4 align-end">
             @if (_showVisitsPerDay)
             {
                 <MudNumericField @bind-Value="Appointment.VisitsPerDay" Label="Visits Per Day" Min="1" />
             }
            <MudNumericField @bind-Value="Appointment.Rate" Label="Rate" Format="N2" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.AttachMoney" />
            <MudNumericField @bind-Value="Appointment.ExpectedAmount" Label="Expected Amount" Format="N2" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.AttachMoney" />
            <MudIconButton Icon="@Icons.Material.Filled.Calculate" Color="Color.Primary" OnClick="CalculateAmount" />
        </div>

        <MudText Typo="Typo.h6" Class="mt-4">Payments</MudText>
        <MudList T="string">
            @foreach (var payment in Payments)
            {
                <MudListItem T="string">
                    <div class="d-flex justify-space-between align-center">
                        <MudText>@payment.PaymentDate.ToShortDateString() - @payment.Amount.ToString("C") (@payment.Method)</MudText>
                        <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(() => DeletePayment(payment))" Size="Size.Small" />
                    </div>
                </MudListItem>
            }
        </MudList>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="AddPayment" Class="mt-2">Add Payment</MudButton>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Appointment Appointment { get; set; } = new();

    private List<Customer> Customers = new();
    private List<Pet> CustomerPets = new();
    private List<Payment> Payments = new();
    private List<ServiceModel> Services = new();

    private IEnumerable<string> SelectedPets { get; set; } = new HashSet<string>();
    private bool _showVisitsPerDay = false;
    private Customer _selectedCustomer;

    protected override async Task OnInitializedAsync()
    {
        Customers = await LocalDb.GetCustomers();
        Services = await LocalDb.GetServices();
        Services = Services.Where(s => !s.IsObsolete).ToList();

        if (Appointment.Id != Guid.Empty)
        {
            var allPayments = await LocalDb.GetPayments();
            Payments = allPayments.Where(p => p.AppointmentId == Appointment.Id).ToList();

            if (Appointment.CustomerId != Guid.Empty)
            {
                _selectedCustomer = Customers.FirstOrDefault(c => c.Id == Appointment.CustomerId);
                await LoadCustomerPets(Appointment.CustomerId);
                SelectedPets = Appointment.PetIds.Select(id => id.ToString()).ToHashSet();
            }

            CheckServiceType(Appointment.ServiceType);
        }
    }

    private async Task OnCustomerSelected(Customer customer)
    {
        _selectedCustomer = customer;
        if (customer != null)
        {
            await OnCustomerChanged(customer.Id);
        }
        else
        {
             Appointment.CustomerId = Guid.Empty;
             CustomerPets.Clear();
             SelectedPets = new HashSet<string>();
             Appointment.PetIds.Clear();
        }
    }

    private async Task<IEnumerable<Customer>> SearchCustomers(string value, CancellationToken token)
    {
        if (string.IsNullOrEmpty(value))
            return Customers.OrderByDescending(c => c.CreatedAt).Take(10);

        return Customers.Where(c => c.FullName.Contains(value, StringComparison.InvariantCultureIgnoreCase));
    }

    private async Task OnCustomerChanged(Guid customerId)
    {
        Appointment.CustomerId = customerId;
        await LoadCustomerPets(customerId);
        SelectedPets = new HashSet<string>();
        Appointment.PetIds.Clear();
    }

    private void OnServiceChanged(string serviceName)
    {
        Appointment.ServiceType = serviceName;
        var service = Services.FirstOrDefault(s => s.Name == serviceName);
        if (service != null)
        {
            Appointment.Rate = service.DefaultRate;
            _showVisitsPerDay = service.IsMultiplePerDay;
            if (!_showVisitsPerDay) Appointment.VisitsPerDay = 1;
        }
        else
        {
             _showVisitsPerDay = false;
        }
    }

    private void CheckServiceType(string serviceName)
    {
         var service = Services.FirstOrDefault(s => s.Name == serviceName);
         if (service != null)
         {
             _showVisitsPerDay = service.IsMultiplePerDay;
         }
    }

    private async Task LoadCustomerPets(Guid customerId)
    {
        var allPets = await LocalDb.GetPets();
        CustomerPets = allPets.Where(p => p.CustomerId == customerId && p.DateOfDeath == null).ToList();
    }

    private string GetMultiSelectionText(List<string> selectedValues)
    {
        var names = CustomerPets
            .Where(p => selectedValues.Contains(p.Id.ToString()))
            .Select(p => p.Name)
            .ToList();
        return string.Join(", ", names);
    }

    private void CalculateAmount()
    {
        if (Appointment.Start.HasValue && Appointment.End.HasValue)
        {
            var diff = (Appointment.End.Value - Appointment.Start.Value).Days;
            var days = Math.Max(1, diff);

            decimal totalVisits = days * Appointment.VisitsPerDay;
            Appointment.ExpectedAmount = totalVisits * Appointment.Rate;
        }
    }

    private async Task AddPayment()
    {
        var newPayment = new Payment { AppointmentId = Appointment.Id, Amount = 0 };
        var parameters = new DialogParameters { ["Payment"] = newPayment };
        var dialog = DialogService.Show<PaymentDialog>("Add Payment", parameters);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is Payment payment)
        {
            Payments.Add(payment);
        }
    }

    private async Task DeletePayment(Payment payment)
    {
        bool? result = await DialogService.ShowMessageBox(
            "Delete Payment",
            "Are you sure you want to delete this payment?",
            yesText: "Delete", cancelText: "Cancel");

        if (result == true)
        {
            await LocalDb.DeletePayment(payment.Id);
            Payments.Remove(payment);
            await SyncService.TryAutoSync();
        }
    }

    private async Task Submit()
    {
        if (Appointment.CustomerId == Guid.Empty)
        {
            Snackbar.Add("Please select a customer.", Severity.Error);
            return;
        }
        if (Appointment.Start == null || Appointment.End == null)
        {
            Snackbar.Add("Please select start and end dates.", Severity.Error);
            return;
        }
        if (Appointment.End < Appointment.Start)
        {
            Snackbar.Add("End date cannot be before start date.", Severity.Error);
            return;
        }

        Appointment.SyncState = SyncState.PendingUpdate;
        Appointment.PetIds = SelectedPets.Select(Guid.Parse).ToList();

        Appointment.UpdatedAt = DateTime.UtcNow;
        await LocalDb.SaveAppointment(Appointment);

        foreach (var payment in Payments)
        {
            payment.AppointmentId = Appointment.Id;
            payment.UpdatedAt = DateTime.UtcNow;
            await LocalDb.SavePayment(payment);
        }

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}
