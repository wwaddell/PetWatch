@using PetSitterApp.Models
@inject LocalDbService LocalDb
@inject SyncService SyncService
@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="_workingCustomer.FirstName" Label="First Name" />
        <MudTextField @bind-Value="_workingCustomer.LastName" Label="Last Name" />
        <MudTextField @bind-Value="_workingCustomer.Email" Label="Email" InputType="InputType.Email" InputMode="InputMode.email" autocomplete="email" autocorrect="off" spellcheck="false" />
        <MudTextField @bind-Value="_workingCustomer.PhoneNumber" Label="Phone Number" InputType="InputType.Telephone" InputMode="InputMode.tel" autocomplete="tel" autocorrect="off" spellcheck="false" />
        <MudTextField @bind-Value="_workingCustomer.Address" Label="Address" Lines="3" />
        <MudTextField @bind-Value="_workingCustomer.Notes" Label="Notes" Lines="3" />

        <MudText Typo="Typo.h6" Class="mt-4">Pets</MudText>
        <MudList T="string">
             @foreach (var pet in _workingPets)
             {
                 <MudListItem T="string">
                     <div class="d-flex justify-space-between align-center">
                         <MudText>@pet.Name (@pet.Species)</MudText>
                         <div>
                             <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="@(() => EditPet(pet))" Size="Size.Small" />
                             <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(() => DeletePet(pet))" Size="Size.Small" />
                         </div>
                     </div>
                 </MudListItem>
             }
        </MudList>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="AddPet" Class="mt-2">Add Pet</MudButton>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Customer Customer { get; set; } = new();

    private Customer _workingCustomer = new();
    private List<Pet> _workingPets = new();
    private List<Pet> _deletedPets = new();

    protected override async Task OnInitializedAsync()
    {
        _workingCustomer = Customer.Clone();

        if (Customer.Id != Guid.Empty)
        {
            var allPets = await LocalDb.GetPets();
            // Clone each pet
            _workingPets = allPets.Where(p => p.CustomerId == Customer.Id).Select(p => p.Clone()).ToList();
        }
    }

    private async Task AddPet()
    {
        var newPet = new Pet { CustomerId = _workingCustomer.Id };
        var parameters = new DialogParameters { ["Pet"] = newPet };
        var dialog = DialogService.Show<PetDialog>("Add Pet", parameters);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is Pet pet)
        {
            _workingPets.Add(pet);
        }
    }

    private async Task EditPet(Pet pet)
    {
        // PetDialog now modifies the passed object reference upon Save, so we can pass the object from our list directly.
        // If Cancelled, it remains untouched.
        var parameters = new DialogParameters { ["Pet"] = pet };
        var dialog = DialogService.Show<PetDialog>("Edit Pet", parameters);
        await dialog.Result;
    }

    private void DeletePet(Pet pet)
    {
        // Do not delete from DB yet
        _workingPets.Remove(pet);
        _deletedPets.Add(pet);
    }

    private async Task Submit()
    {
        // Copy back to original customer object (to update the caller's reference)
        Customer.CopyFrom(_workingCustomer);

        Customer.SyncState = SyncState.PendingUpdate;
        Customer.UpdatedAt = DateTime.UtcNow;
        await LocalDb.SaveCustomer(Customer);

        // Save Pets
        foreach(var pet in _workingPets)
        {
            pet.CustomerId = Customer.Id;
            pet.SyncState = SyncState.PendingUpdate;
            pet.UpdatedAt = DateTime.UtcNow;
            await LocalDb.SavePet(pet);
        }

        // Delete Pets
        foreach (var pet in _deletedPets)
        {
            // Only delete if it was previously saved (has an ID that exists in DB)
            // But here we rely on LocalDb.DeletePet(id)
            await LocalDb.DeletePet(pet.Id);
        }

        _ = Task.Run(async () => await SyncService.TryAutoSync());

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}
