@using PetSitterApp.Models
@inject LocalDbService LocalDb

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Customer.FirstName" Label="First Name" />
        <MudTextField @bind-Value="Customer.LastName" Label="Last Name" />
        <MudTextField @bind-Value="Customer.Email" Label="Email" />
        <MudTextField @bind-Value="Customer.PhoneNumber" Label="Phone Number" />
        <MudTextField @bind-Value="Customer.Address" Label="Address" Lines="3" />

        <MudText Typo="Typo.h6" Class="mt-4">Pets</MudText>
        <MudList T="string">
             @foreach (var pet in Pets)
             {
                 <MudListItem T="string">
                     <div class="d-flex justify-space-between align-center">
                         <MudText>@pet.Name (@pet.Species)</MudText>
                         <div>
                             <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="@(() => EditPet(pet))" Size="Size.Small" />
                             <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(() => DeletePet(pet))" Size="Size.Small" />
                         </div>
                     </div>
                 </MudListItem>
             }
        </MudList>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="AddPet" Class="mt-2">Add Pet</MudButton>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Customer Customer { get; set; } = new();

    private List<Pet> Pets = new();

    protected override async Task OnInitializedAsync()
    {
        if (Customer.Id != Guid.Empty)
        {
            var allPets = await LocalDb.GetPets();
            Pets = allPets.Where(p => p.CustomerId == Customer.Id).ToList();
        }
    }

    [Inject] IDialogService DialogService { get; set; } = default!;

    private async Task AddPet()
    {
        var newPet = new Pet { CustomerId = Customer.Id };
        var parameters = new DialogParameters { ["Pet"] = newPet };
        var dialog = DialogService.Show<PetDialog>("Add Pet", parameters);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is Pet pet)
        {
            Pets.Add(pet);
        }
    }

    private async Task EditPet(Pet pet)
    {
        var parameters = new DialogParameters { ["Pet"] = pet };
        var dialog = DialogService.Show<PetDialog>("Edit Pet", parameters);
        await dialog.Result;
    }

    private async Task DeletePet(Pet pet)
    {
        await LocalDb.DeletePet(pet.Id);
        Pets.Remove(pet);
    }

    private async Task Submit()
    {
        Customer.SyncState = SyncState.PendingUpdate;
        if (Customer.SyncState == SyncState.Synced) Customer.SyncState = SyncState.PendingUpdate; // Logic check needed
        // Simpler: Just mark as pending update or create

        await LocalDb.SaveCustomer(Customer);

        foreach(var pet in Pets)
        {
            pet.CustomerId = Customer.Id;
            await LocalDb.SavePet(pet);
        }

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}
